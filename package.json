{
  "name": "tilby",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "biome check --write",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2",
    "@tilby/typescript-config": "workspace:*",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "turbo": "^2",
    "typescript": "^5"
  },
  "pnpm": {
    "overrides": {
      "next": "16.1.0",
      "react": "19.2.3",
      "react-dom": "19.2.3"
    }
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  }
}
